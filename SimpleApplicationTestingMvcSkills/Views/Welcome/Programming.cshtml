@model ProgrammingIndexViewModel
@{
    ViewBag.Title = "Employee Details";
    string photoPath = null;

}

@if (Model.Employees.Any())
{
    <div class="card-deck">
        @for (int i = 0; i < Model.Employees.Count; i++)
        {
            <div class="card" style="min-width: 18rem; max-width: 30.5%;margin:5px;">
                <div class="card-header">
                    <h4 style="display:none">@Model.Employees[i].Name</h4>
                </div>
                @{
                    photoPath = "~/images/" + (Model.Employees[i].PhotoPath ?? "Iam_tuseTheProgrammer_1.jpg");
                    <img src="@photoPath" class="card-img-top imageThumnails" asp-append-version="true" />
                }

                <div class="card-footer text-center">
                    <a asp-action="info" asp-controller="welcome" class="btn btn-primary mt-2" asp-route-id="@Model.Employees[i].ID">View</a>
                    <a asp-action="edit" asp-controller="welcome" asp-route-id="@Model.Employees[i].ID" class="btn btn-primary mt-2">Edit</a>
                    <a asp-action="delete" asp-controller="welcome" class="btn btn-danger mt-2" asp-route-id="@Model.Employees[i].ID">Delete</a>
                </div>
            </div>
        }


    </div>
}
else
{

    <div class="card mt-2">
        <div class="card-header">
            <h4 style="display:none">
                No record yet to be display!
            </h4>
        </div>
        <div class="card-body">
            Click the button below to add new record.
        </div>

        <div class="card-footer">
            <a asp-controller="welcome" asp-action="add" class="btn btn-primary btn-block" style="width:auto;">
                Add new record
            </a>
        </div>
    </div>
}


@section Scripts{
    <script>
        $(document).ready(function () {
            $('h4')
                .addClass('myH4Style')
                .fadeIn(5000);
        });
    </script>
}