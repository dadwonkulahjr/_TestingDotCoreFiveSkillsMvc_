@model EmployeeDeleteViewModel
@{
    ViewBag.Title = "Delete Employee";
    var photoPath = "~/images/" + (Model.PhotoPath ?? "Iam_tuseTheProgrammer_1.jpg");
}
<h1>
    Delete Employee
</h1>
<hr />
<div class="row justify-content-center">

    <div class="col-sm-4">
        <div class="card mb-3">
            <div class="card-header">
                <h2>@Model.Name</h2>
            </div>

            <div class="card-body text-center">
                <img src="@photoPath" class="card-img-top" asp-append-version="true" />
                <strong>Email :</strong>@Model.Email<br />
                <strong>Department :</strong>@Model.Department
            </div>
            <div class="card-footer text-center">
                <form method="post" asp-controller="welcome" asp-action="delete">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this employee?')" asp-route-id="@Model.ID" class="btn btn-outline-danger m-2">Delete</button>
                </form>
                <a asp-action="programming" asp-controller="welcome" class="btn btn-outline-secondary">Back</a>
            </div>
        </div>
    </div>

</div>