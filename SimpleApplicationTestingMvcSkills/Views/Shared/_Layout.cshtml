@inject SignInManager<IdentityUser> _signInManager;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-light bg-dark navbar-expand-lg fixed-top shadow">
        <div class="container">
            <a asp-action="programming" asp-controller="welcome" class="navbar-brand">
                <img src="~/images/employees.png" style="width:40px" class="rounded-circle" />
            </a>
            <button class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon bg-white"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="welcome" asp-action="programming" class="nav-link active text-white">List</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="welcome" asp-action="add" class="nav-link text-white">AddNewEmployee</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (_signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button class="btn nav-link btn-link py-0 text-white" style="width:auto;">
                                    Hi, Welcome @User.Identity.Name! Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Register" class="nav-link active text-white">Register</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="nav-link text-white">LogIn</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    @if (IsSectionDefined("Scripts"))
    {
        RenderSection("Scripts", required: true);
    }
</body>
</html>
